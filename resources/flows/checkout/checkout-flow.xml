<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <var name="recipientInfo" class="com.geekbrains.spring2.flow.checkout.RecipientInfo" />

    <on-start>
        <evaluate expression="orderHandler.initOrderModel()"
                  result="flowScope.orderModel" />
        <evaluate expression="orderHandler.initCartFinal()"
                  result="flowScope.cartFinal" />
    </on-start>

    <view-state id="checkCart" view="flows/checkout/check-cart" model="flowScope.cartFinal">
        <transition on="submit" to="recipientForm" />
        <on-exit>
            <evaluate expression="orderHandler.addCartFinal(flowScope.orderModel, flowScope.cartFinal)" />
        </on-exit>
    </view-state>

    <view-state id="recipientForm" view="flows/checkout/new-recipient-info" model="recipientInfo">
        <transition on="checkCart" to="checkCart" />
        <transition on="orderSuccess" to="validateRecipient" />
        <on-exit>
            <evaluate expression="orderHandler.addRecipientInfo(flowScope.orderModel, recipientInfo)" />
        </on-exit>
    </view-state>

    <action-state id="validateRecipient">
        <evaluate expression="orderHandler.validateRecipientInfo(recipientInfo, messageContext)" />
        <transition on="success" to="orderComplete" />
        <transition on="failure" to="recipientForm" />
    </action-state>

    <view-state id="orderComplete" view="flows/checkout/order-success" model="flowScope.orderModelModel">
        <transition on="recipientForm" to="recipientForm" />
        <transition on="checkCart" to="checkCart" />
        <transition on="submit" to="submit" />
    </view-state>

    <action-state id="submit">
        <evaluate expression="orderHandler.saveOrder(flowScope.orderModel, messageContext)" />
        <transition on="success" to="success" />
        <transition on="failure" to="orderComplete" />
    </action-state>

    <!-- end state -->
    <end-state id="success" view="flows/checkout/order-success" />
    <end-state id="home" view="externalRedirect:contextRelative:/" />

    <!-- Global Transition -->
    <global-transitions>
        <transition on="home" to="home" validate="false" />
    </global-transitions>
</flow>